	`id`       INTEGER PRIMARY KEY,

    `parent_id` INTEGER,
		-- our parent, or NULL on top-level comments.

	`path`      VARCHAR(127) NOT NULL,

    `template` VARCHAR(128),

    FOREIGN KEY (`parent_id`) REFERENCES Page_Entity (`id`) ON DELETE CASCADE
);
